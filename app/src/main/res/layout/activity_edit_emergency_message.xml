<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditEmergencyMessage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Message"
            android:layout_gravity="center"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/editText_EmergencyTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="10"
            android:maxLines="15"
            android:minLines="10"
            android:enabled="true"
            android:scrollbars="vertical"
            android:gravity="start"/>

        <Button
            android:id="@+id/button_SaveEditedEmergencyMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Edited Emergency Message" />

        <Button
            android:id="@+id/button_Back2EmergencyMessageActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>